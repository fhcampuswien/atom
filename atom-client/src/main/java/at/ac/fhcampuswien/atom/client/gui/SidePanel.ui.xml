<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field='res'
		type='at.ac.fhcampuswien.atom.client.gui.AtomClientBundle' />

	<ui:style field="sidePanelStyle"
		type='at.ac.fhcampuswien.atom.client.gui.SidePanel.SidePanelStyle'>
			.space {
				background-color: #fcfcfd; /* #c9d5e0; */
			}
			
			.spaceMarked {
				background-color: #f9cbcb;
			}
			
			.spaceNoBack {
				width: 100%;
				height: 100%;
			}
			
			.halfSpace {
				width: 100%;
				height: 50%;
				background-color: #fcfcfd; /* #c9d5e0; */
			}
			
			.borderColor {
				width: 100%;
				height: 100%;
				background-color: #dce4eb;
			}
			
			.label {
				font-family: Verdana, Arial, Helvetica, sans-serif;
				font-size: 14px;
				padding-top: 2px;
				padding-left: 0px;
				letter-spacing: -0.5pt;
				color: #475765;
			}
			
			.closeButton {
				padding-top: 4px;
				padding-left: 3px;
				vertical-align: middle;
				align: middle;
				cursor: pointer;
			}
			
			.roundedLabel {
				-moz-border-radius: 6px;
				border-radius: 6px;
				behavior: url(pie/PIE.htc);
				padding-left: 3px;
				padding-right: 3px;
				background-color: #eff0f1;
			}
		</ui:style>

	<g:ScrollPanel ui:field="scrollPanel" styleName='{sidePanelStyle.spaceNoBack}' />
</ui:UiBinder> 
