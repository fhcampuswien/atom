<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:dnd="urn:import:at.ac.fhcampuswien.atom.client.gui.dnd">

	<ui:with field='res'
		type='at.ac.fhcampuswien.atom.client.gui.AtomClientBundle' />

	<ui:style field="panelStyle"
		type='at.ac.fhcampuswien.atom.client.gui.attributes.BooleanView.PanelStyle'>
			.space {
				height: 21px;
				width: 100%;
			}
			
			.textBox {
				width: 100%;
			}
			
			.button {
				margin-right: 10px;
			}
		</ui:style>

	<g:HorizontalPanel>
		<g:RadioButton styleName='{panelStyle.button}' name="booleanSelection" ui:field="trueButton" text="Ja" />
		<g:RadioButton styleName='{panelStyle.button}' name="booleanSelection" ui:field="falseButton" text="Nein" />
		<g:RadioButton styleName='{panelStyle.button}' name="booleanSelection" ui:field="nullButton" text="k.A." />
		
		<!-- <g:Label ui:field="trueLabel">Ja</g:Label>
		<g:Label ui:field="falseLabel">Nein</g:Label>
		<g:Label ui:field="nullLabel">k.A.</g:Label> -->
	</g:HorizontalPanel>

